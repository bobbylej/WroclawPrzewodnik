<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guide.guide.FilterFragment"
    android:background="#ffffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ZasiÄ™g radaru:"
                    android:id="@+id/radiusFilterLabel"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:textColor="#ff505050" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0,5 km"
                    android:id="@+id/radiusFilterText"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#FF828282" />
            </LinearLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radiusFilter"
                android:max="10000"
                android:progress="100"
                android:indeterminate="false"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Typy miejsc"
                android:id="@+id/typesFilterLabel"
                android:textStyle="bold"
                android:textColor="#ff505050"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="1"
                android:visibility="gone">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Zaznacz wszystkie"
                    android:id="@+id/checkAllButton"
                    android:background="#ff53749d"
                    android:layout_gravity="left"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:layout_marginRight="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Odznacz Wszystkie"
                    android:id="@+id/uncheckAllButton"
                    android:background="#ff53749d"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp" />
            </GridLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/typesBox">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
