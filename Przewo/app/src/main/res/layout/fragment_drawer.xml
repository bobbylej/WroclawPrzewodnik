<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.guide.przewo.PlaceFragment">

    <SlidingDrawer
        android:layout_width="match_parent"
        android:id="@+id/slidingD"
        android:layout_height="match_parent"
        android:handle="@+id/handle"
        android:content="@+id/content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp">

        <Button
            android:layout_width="match_parent"
            android:text="Button"
            android:layout_height="wrap_content"
            android:id="@+id/handle"
            android:background="@drawable/radius_background"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:drawableRight="@drawable/info"
            android:drawableEnd="@drawable/info"
            android:drawablePadding="-40dp"
            android:padding="10dp"
            />

        <LinearLayout android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:alpha="0.95"
            android:orientation="vertical"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fragment_drawer_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>

        </LinearLayout>

    </SlidingDrawer>

</FrameLayout>
