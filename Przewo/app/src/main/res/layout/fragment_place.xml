<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.guide.przewo.PlaceFragment"
    android:orientation="vertical"
    android:id="@+id/place_place_place">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <android.support.v4.view.ViewPager
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/locationButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="false"
            android:scaleType="fitXY"
            android:src="@drawable/location"
            android:background="@android:color/transparent"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Szczegóły"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailsButton"
                    android:textSize="14dip"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Wydarzenia"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventsButton"
                    android:textSize="14dip"
                    android:layout_marginTop="-7dp"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:text="Trasy"
                    android:layout_height="wrap_content"
                    android:id="@+id/routesButton"
                    android:textSize="14dip"/>

            </LinearLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fragment_place_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"/>


</LinearLayout>
